<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heartrate"
    tools:context=".Test_bpfirst">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/bpm_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your BPM:"
            android:textColor="#00FF00"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/bpm_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="BPM"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColorHint="#FF0000"/>

        <Button
            android:id="@+id/calculate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Blood Pressure" />

        <TextView
            android:id="@+id/systolic_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Systolic: "
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/diastolic_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diastolic: "
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
