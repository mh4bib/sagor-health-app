<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F4F6">

    <!-- Toolbar with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#03A9F4">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButtonId"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_button"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical" />

        <!-- Title -->
        <TextView
            android:id="@+id/toolbarTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Enter OTP"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Countdown Timer -->
        <TextView
            android:id="@+id/timerTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Time left: 60s"
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- ProgressBar (hidden initially) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- OTP Input Field -->
        <EditText
            android:id="@+id/otpEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/edittext_background"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Verify Button -->
        <Button
            android:id="@+id/verifyOtpButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="40dp" />

        <Button
            android:id="@+id/resendOtpButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:backgroundTint="#03A9F4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="40dp" />


        <!-- Go to Home Link -->
        <TextView
            android:id="@+id/goToHomeTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Go to home"
            android:textColor="#03A9F4"
            android:textSize="16sp"
            android:textStyle="bold" />



    </LinearLayout>
</LinearLayout>
