<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround1"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:textSize="36sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_bmi"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BMI"
        android:textColor="#000000"
        android:backgroundTint="#00FF00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_bmi_test"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BMI Test"
        android:textColor="#000000"
        android:backgroundTint="#FFFF00"
        app:layout_constraintTop_toBottomOf="@id/btn_bmi"
        app:layout_constraintStart_toStartOf="@id/btn_bmi"
        app:layout_constraintEnd_toEndOf="@id/btn_bmi"/>

    <Button
        android:id="@+id/btn_diet_control"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:text="Diet Control"
        android:backgroundTint="#20B2AA"
        app:layout_constraintTop_toBottomOf="@id/btn_bmi_test"
        app:layout_constraintStart_toStartOf="@id/btn_bmi_test"
        app:layout_constraintEnd_toEndOf="@id/btn_bmi"/>

    <Button
        android:id="@+id/btn_blood_pressure"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BP Check"
        android:textColor="#000000"
        android:backgroundTint="#F4A460"
        app:layout_constraintTop_toBottomOf="@+id/btn_diet_control"
        app:layout_constraintStart_toStartOf="@+id/btn_diet_control"
        app:layout_constraintEnd_toEndOf="@id/btn_bmi"/>

    <Button
        android:id="@+id/btn_blood_pressure_2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="BP Check with Sensor"
        android:textColor="#000000"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/btn_blood_pressure"
        app:layout_constraintStart_toStartOf="@id/btn_blood_pressure"
        app:layout_constraintEnd_toEndOf="@id/btn_blood_pressure"/>

    <Button
        android:id="@+id/btn_exercises"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Exercises"
        android:textColor="#000000"
        android:backgroundTint="#00BCD4"
        app:layout_constraintTop_toBottomOf="@+id/btn_blood_pressure_2"
        app:layout_constraintStart_toStartOf="@+id/btn_blood_pressure_2"
        app:layout_constraintEnd_toEndOf="@id/btn_blood_pressure_2"/>

    <Button
        android:id="@+id/btn_step_counter_2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Step Counter with Goal"
        android:textColor="#000000"
        android:backgroundTint="#00FFFF"
        app:layout_constraintTop_toBottomOf="@+id/btn_exercises"
        app:layout_constraintStart_toStartOf="@+id/btn_exercises"
        app:layout_constraintEnd_toEndOf="@+id/btn_exercises"/>


    <Button
        android:id="@+id/Exercise_suggestion"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Exercise Suggestion"
        android:textColor="#000000"
        android:backgroundTint="#FFEFD5"
        android:foregroundGravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_step_counter_2"
        app:layout_constraintStart_toStartOf="@+id/btn_step_counter_2"
        app:layout_constraintEnd_toEndOf="@+id/btn_step_counter_2"/>

    <Button
        android:id="@+id/Sensor_BPM"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Heart Rate sensor"
        android:textColor="#000000"
        android:backgroundTint="#00FFFF"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/Exercise_suggestion"
        app:layout_constraintStart_toStartOf="@id/Exercise_suggestion"
        app:layout_constraintEnd_toEndOf="@id/Exercise_suggestion" />



</androidx.constraintlayout.widget.ConstraintLayout>